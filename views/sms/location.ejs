   <hr/>
    <section class="pt-0 pt-lg-5 " style="background-color: #fff !important;">
        <div class="container position-relative">
            <!-- SVG decoration START -->
            <figure class="position-absolute top-50 start-50 translate-middle ms-2">
                <svg>
                    <path class="fill-white opacity-4"
                        d="m496 22.999c0 10.493-8.506 18.999-18.999 18.999s-19-8.506-19-18.999 8.507-18.999 19-18.999 18.999 8.506 18.999 18.999z" />
                    <path class="fill-white opacity-4"
                        d="m775 102.5c0 5.799-4.701 10.5-10.5 10.5-5.798 0-10.499-4.701-10.499-10.5 0-5.798 4.701-10.499 10.499-10.499 5.799 0 10.5 4.701 10.5 10.499z" />
                    <path class="fill-white opacity-4"
                        d="m192 102c0 6.626-5.373 11.999-12 11.999s-11.999-5.373-11.999-11.999c0-6.628 5.372-12 11.999-12s12 5.372 12 12z" />
                    <path class="fill-white opacity-4"
                        d="m20.499 10.25c0 5.66-4.589 10.249-10.25 10.249-5.66 0-10.249-4.589-10.249-10.249-0-5.661 4.589-10.25 10.249-10.25 5.661-0 10.25 4.589 10.25 10.25z" />
                </svg>
            </figure>
            <!-- SVG decoration END -->
    
            <div class="row">
                <div class="col-12">
                    <div class="bg-info p-4 p-sm-5 rounded-3">
                        <div class="row position-relative">
                            <!-- Svg decoration -->
                            <figure
                                class="fill-white opacity-1 position-absolute top-50 start-0 translate-middle-y">
                                <svg width="141px" height="141px">
                                    <path
                                        d="M140.520,70.258 C140.520,109.064 109.062,140.519 70.258,140.519 C31.454,140.519 -0.004,109.064 -0.004,70.258 C-0.004,31.455 31.454,-0.003 70.258,-0.003 C109.062,-0.003 140.520,31.455 140.520,70.258 Z" />
                                </svg>
                            </figure>
                            <!-- Action box -->
                            <div class="col-11 mx-auto position-relative">
                               
                                    <div class="row align-items-center">
    
                                        <!-- Title -->
                                        <div class="col-lg-7">
                                            <h3 class="text-white">Send SMS To A Specific Location</h3>
                                            <p class="text-white mb-3 mb-lg-0">Speedily say has suitable disposal
                                                add boy. On forth doubt miles of child. Exercise joy man children
                                                rejoiced. Yet uncommonly his ten who diminution astonished. ~ Unknown</p>
                                        </div>
                                        <div class="col-lg-6  position-relative">
                    
    
                                            <form action="/sms/location/sms" method="post">
                                                <select name="location" id="selectschool" required class="form-select form-select-sm">
                                                    <option value="-1">--Select Location--</option>
                                                    <option value="Laikipia">Laikipia County</option>
                                                    <option value="Makueni">Makueni County</option>
                                                    <option value="Nairobi">Nairobi County</option>
                                                    <option value="Naivasha">Naivasha County</option>
                                                    <option value="Other">Other</option>
                                
                                                </select>
                                                
                                                <label for="sender"></label>
                                                <input type="hidden" name="sender" id="sender" class="form-control form-control-sm" value="<%=sender%>">
                                                <br>
                                                <textarea name="msgBody" id="Body" class="form-control form-control-sm " placeholder="Message body"
                                                    cols="30" rows="3" required></textarea>

                                              <br>
                                 <!-- Content and input -->
                                        <div class="col-lg-5 text-lg-end mt-2">
                                            <button type="submit"
                                                class="btn btn-outline-warning mb-0">Send</button>
                                        </div>               
                                            </form>
                                           
                                        </div>
    
                                       
    
                                    </div>
                               
                            </div>
                        </div>
                        <!-- Row END -->
                    </div>
                </div>
            </div>
            <!-- Row END -->
        </div>
    </section>

        <section class="bg-light">
            <div class="container">
                <div class="row mt-0 mt-xl-5">
                    <!-- Review -->
                    <div class="col-md-7 position-relative mb-0 mt-4 ml-n5 mt-md-5">
                        <!-- SVG -->
                        <figure
                            class="fill-success opacity-2 position-absolute top-0 start-0 translate-middle mb-3">
                            <svg width="211px" height="211px">
                                <path
                                    d="M210.030,105.011 C210.030,163.014 163.010,210.029 105.012,210.029 C47.013,210.029 -0.005,163.014 -0.005,105.011 C-0.005,47.015 47.013,-0.004 105.012,-0.004 C163.010,-0.004 210.030,47.015 210.030,105.011 Z">
                                </path>
                            </svg>
                        </figure>
                    </div>
                </div>
                <div class="row g-4 g-lg-5 align-items-center mt-n9">
                    
                    <div class="col-xl-7 order-2 order-xl-1">
                          
                        <div class="row mt-n5 mt-xl-0">
                          <h1 class="fs-4">Sent Mesages</h1>  
                          <div style="height: 300px; overflow-y: scroll;">
                              <%messages.forEach( function(message){%>
                                <div class="bg-white shadow rounded-1 form-control-sm"> 
                                
                                        <ul class="list-unstyled">
                                            <li class="">
                                                <div class="text-success" ><%= message.sender%> , <%= moment(message.createdAt).format('MMMM Do YYYY, hh:mm:ss a')%>
                                                    <hr>
                                                </div>
                                                <div>
                                                   
                                                To: <%= message.location%> , <%school.forEach((school)=>{%>
                                                    <%if(school._id==message.school){%>
                                                        <%=school.schoolName%>
                                                        <%}%>
                                                    <%})%> ,
                                                
                                                <%=message.contact%>
                                                <br>
                                                <% if(message.msgBody){%>
                                                 Message:   <%= message.msgBody%>
                                                    <span class="badge bg-primary rounded-pill">1</span>
                                                    <%} else {%>
                                                        Empty Message
                                                       <%}%>

                                                </div>    
                                            </li>
                                        </ul>
                                </div>
                                <br>
                                 <%})%> 
                          </div>
                        </div>
                         
                        <!-- Row END -->
                        
                        <!-- Row END -->
                    </div>
                    <div class="col-xl-5 order-1 text-center text-xl-start mt-3">
                        <!-- Title -->
                        <h2 class="fs-4 mt-5">Some valuable feedback from SMS database</h2>
                        <p class="mb-5">SMS sent from any of the forms will be saved in our cloud database.
                            Some user resources are obtained for the purpose of application functionality
                        </p>
                        
                    </div>
                </div>
                <!-- Row END -->
            </div>
        </section>
    

            <!-- Bootstrap JS -->
            <script src="/vendor/bootstrap/dist/js/bootstrap.bundle.min.js"></script>

            <!-- Vendors -->
            <script src="/vendor/tiny-slider/tiny-slider.js"></script>
            <script src="/vendor/glightbox/js/glightbox.js"></script>
            

