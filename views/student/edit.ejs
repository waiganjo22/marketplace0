<%- include('../partials/header.ejs')%>
    <main>
        <section>
            <div class="container mt-4">
                <div class="row">
                    <div class="col-md-2">

                    </div>
                    <div class="col-md-8">
                        <p class="lead" style="font-size: 20px;">Edit <%=Data.studentname%>
                        </p>
                        
                        <button type="button" class="btn btn-default btn-outline-danger py-1  btn-sm" data-bs-toggle="modal"
                            data-bs-target="#exampleModal" data-bs-whatever="Item Name" style="border-radius: 18px;">Delete <%=Data.studentname%> <i
                                    class="fa fa-trash" aria-hidden="true"></i></button>
                        <div class="modal fade" id="exampleModal" tabindex="-1" aria-labelledby="exampleModalLabel"
                            aria-hidden="true">
                            <div class="modal-dialog">
                                <div class="modal-content">
                                    <div class="modal-header">
                                        <h5 class="modal-title" id="exampleModalLabel">Want To Delete
                                            <%=Data.studentname%>?
                                        </h5>
                                        <button type="button" class="btn-close" data-bs-dismiss="modal"
                                            aria-label="Close"></button>
                                    </div>
                                    <div class="modal-body form form-horizontal">
                                        <form action="/student/delete/<%=Data._id%>" method="post">
                                            <input type="hidden" name="_method" value="DELETE">
                                            <button class="btn btn-danger col-md-4 btn-sm py-1" type="submit">
                                                Delete
                                            </button>
                                            <p class="btn btn-primary btn-sm col-md-4 py-1" data-bs-dismiss="modal">Cancel</p>

                                        </form>


                                    </div>
                                </div>
                            </div>
                        </div>


                        <hr class="col-md-8">
                        <form action="/student/edit/<%=Data._id%>" method="POST" class="form-group">
                            <input type="hidden" name="_method" value="PUT">
                            <!-- student full name -->
                            <div class="row col-md-8">
                                <div class="input-group">
                                    <input type="text" name="studentname" id="studentname"
                                        class="form-control form-control-sm" placeholder="Student Full Name"
                                        value="<%=Data.studentname%>">
                                </div>
                            </div>
                            <br>
                            <!-- student contact -->
                            <div class="row col-md-8">
                                <div class="input-group">
                                    <input type="tel" name="contact" id="contact" class="form-control form-control-sm"
                                        placeholder="Student contact Number" value="<%=Data.contact%>">
                                </div>
                            </div>
                            <br>
                            <!-- hidden school input -->
                            <div class="row col-md-8">
                                <div class="input-group">
                                    <input type="hidden" name="school" id="school" class="form-control form-control-sm"
                                        value="<%=Data.school%>">
                                </div>
                            </div>
                            <!-- gender -->
                            <div class="row col-md-8">
                                <fieldset class="form-group ">
                                    <select class="form-control form-control-sm" name="gender" id="gender">
                                        <option value="-1">--Select Gender--</option>
                                        <option value="Male">Male</option>
                                        <option value="Female">Female</option>
                                    </select>
                                </fieldset>
                            </div>
                            <br>
                            <!-- student class -->
                            <div class="row col-md-8">
                                <fieldset class="form-group ">
                                    <select class="form-control form-control-sm" name="form" id="form">
                                        <option value="-1">--Select Form--</option>
                                        <option value="Form1">Form 1</option>
                                        <option value="Form2">Form 2</option>
                                        <option value="Form3">Form 3</option>
                                        <option value="Form4">Form 4</option>
                                    </select>
                                </fieldset>
                            </div>
                            <br>
                            <div class="row col-md-8">
                                <fieldset class="form-group ">
                                    <select class="form-control form-control-sm" name="location" id="location">
                                        <option value="-1">--Select Location--</option>
                                        <option value="Laikipia">Laikpia County</option>
                                        <option value="Makueni">Makueni County</option>
                                        <option value="Nairobi">Nairobi County</option>
                                        <option value="Naivasha">Naivasha County</option>
                                        <option value="Other">Other</option>

                                    </select>
                                </fieldset>
                            </div>
                            <br>
                            <div class="row col-md-8">
                                <div class="input-group">
                                    <div class="form-check form-switch">
                                        <input class="form-check-input" type="checkbox" id="sponsored" name="sponsored">
                                        <label class="form-check-label" for="sponsored" value="<%=Data.sponsored%>"> Sponsored</label>
                                    </div>
                                </div>

                            </div>
                            <br>
                            <div class="row">
                                <div class="col-md-8">
                                    <i><input type="submit" value="Update"
                                            class="btn btn-primary  btn-sm col-md-2 py-1"></i>
                                    <a href="/student/view" class="btn btn-danger  btn-sm col-md-2 py-1">Cancel</a>
                                </div>
                            </div>
                        </form>
                        <hr class="col-md-8">

                    </div>
                </div>
            </div>
        </section>
    </main>
    <%- include('../partials/footer.ejs')%>
