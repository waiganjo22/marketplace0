<div class="container">
    <p class="h5 lead"><i class="fa fa-comment" aria-hidden="true"></i> SMS</p>
    <br>
    <!-- Bulk sms -->
    <p class="lead">Send a single Message</p>

    <div class="col-lg-12">
        <div class="row">
            <div class="col-lg-6">
                <form action="/sms/send/singlesms" method="POST">
                    <hr>
                    <label for="contact"></label>
                    <input type="text" name="contact" id="contact" class="form-control form-control-sm"
                        placeholder="Enter Phone Number (Must include +254...)" value="" required>
                    <label for="sender"></label>
                    <input type="text" name="sender" id="sender" class="form-control form-control-sm" value="<%=sender%>" hidden>
                    <label for="msgBody"></label>
                    <textarea name="msgBody" id="msgBody" class="form-control form-control-sm "
                        placeholder="Message body" cols="30" rows="3" required></textarea>
                    <br>
                    <button type="submit" class="btn btn-danger lead btn-sm col-sm-2 py-1">Send <i
                            class="fa fa-paper-plane" aria-hidden="true"></i></button>
                    <hr>
                    <br>
                </form>
            </div>
            <!-- Chart History -->
            <div class="col-lg-6" style="height: 350px; overflow-x: scroll;">
                <hr>
                Chat History
                <hr>
                <br>

                <%messages.forEach( function(message){%>
                    <ul class="list-group">
                        <li class="list-group-item form-control-sm">
                            <div class="fw-bold"><%=message.sender%>, <%= moment(message.createdAt).format('MMMM Do YYYY, hh:mm:ss a')%>
                              
                            </div>
                            To: <%= message.location%> , <%school.forEach((school)=>{%>
                                <%if(school._id == message.school){%>
                                    <%=school.schoolName%>
                                    <%}%>
                                <%})%> ,
                            
                            <%= message.contact%>
                            <br>
                            <% if(message.msgBody){%>
                                <%= message.msgBody%>
                                <span class="badge bg-primary rounded-pill">1</span>
                                <%} else {%>
                                    Empty Message
                                   <%}%>
                                   <br>
                                   
                        </li>
                    </ul>
                    <br>
                    <%})%>


                        <hr>
            </div>
        </div>
    </div>
</div>

