
        <div class="container">
            <div class="row">
                
                <div class="col-lg-6">
                    <div class="col-lg-12">
                        <p class="h5 lead"><i class="fa fa-comment" aria-hidden="true"></i> SMS</p>
                        <hr>
                        <form action="/sms/school/sms/send" method="post">
                            <select name="school" id="school" required class="form-select form-select-sm">
                                <option value="-1">--Select School--</option>
                                <%school.forEach(function(school){%>
                                    <option value="<%=school._id%>">
                                        <%=school.schoolName%>
                                    </option>
                                    <%})%>
                            </select>
                            <br>
                            <select class="form-select form-select-sm" aria-label=".form-select-sm example" id="contact"
                                name="contact" required>
                                <option value="-1">--Select Form--</option>
                                <option value="Form1">
                                    Form 1
                                </option>
                                <option value="Form2">
                                    Form 2
                                </option>
                                <option value="Form3">
                                    Form 3
                                </option>
                                <option value="Form4">
                                    Form 4
                                </option>
                            </select>
                            <label for="sender"></label>
                            <input type="hidden" name="sender" id="sender" class="form-control form-control-sm"
                                value="<%=sender%>">
                            <br>
                            <textarea name="msgBody" id="msgBody" class="form-control form-control-sm "
                                placeholder="Message body" cols="30" rows="3" required></textarea>
                            <br>
                            <button type="submit" class="btn btn-danger lead btn-sm py-1">Send <i
                                    class="fa fa-paper-plane" aria-hidden="true"></i></button>
                        </form>
                        <hr>
                    </div>

                </div>
                      <!-- Chart History -->
                      
            <div class="col-lg-6" style="height: 350px; overflow-x: scroll; scroll-behavior: smooth; scrollbar-width: 1px;">
                <hr>
                Chat History 
                <hr>
                <br>

                <%messages.forEach( function(message){%>
                    <ul class="list-group">
                        <li class="list-group-item form-control-sm col-md-12">
                            <div class="fw-bold"><%= message.sender%> , <%= moment(message.createdAt).format('MMMM Do YYYY, hh:mm:ss a')%></div>
                            To: <%= message.location%> , <%school.forEach((school)=>{%>
                                <%if(school._id == message.school){%>
                                    <%=school.schoolName%>
                                    <%}%>
                                <%})%> ,
                            
                            <%= message.contact%>
                            <br>
                            <% if(message.msgBody){%>
                                <%= message.msgBody%>
                                <span class="badge bg-primary rounded-pill">1</span>
                                <%} else {%>
                                    Empty Message
                                   <%}%>
                                   <br>
                                   
                        </li>
                    </ul>
                    <br>
                    <%})%>
                    
                <hr>
            </div>
            </div>
    </div>

